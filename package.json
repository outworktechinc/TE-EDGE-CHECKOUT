{
  "name": "@your-org/universal-packages",
  "version": "1.0.0",
  "description": "Monorepo for universal packages - Payment Gateway, Sentry Integration, Track IDs, and more",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:payment": "npm run build --workspace=packages/payment-gateway",
    "build:sentry": "npm run build --workspace=packages/sentry-integration",
    "build:track-ids": "npm run build --workspace=packages/track-ids",
    "test": "npm run test --workspaces --if-present",
    "test:payment": "npm run test --workspace=packages/payment-gateway --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "install:all": "npm install",
    "publish:payment": "npm publish --workspace=packages/payment-gateway"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/universal-packages.git"
  },
  "keywords": [
    "monorepo",
    "payment-gateway",
    "sentry",
    "tracking",
    "universal-packages"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "devDependencies": {
    "rimraf": "^5.0.0"
  }
}
